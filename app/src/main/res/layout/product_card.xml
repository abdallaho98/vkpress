<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="158dp"
    android:layout_height="213dp"
    android:layout_marginEnd="12dp"
    android:padding="1dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/card_outline"
        android:layout_height="match_parent">

        <ImageView
            android:elevation="2dp"
            android:id="@+id/image_product"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="146dp"/>
        <ImageButton
            android:elevation="4dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:tint="#b2b6be"
            android:background="@android:color/transparent"
            android:src="@drawable/icn_cart"
            android:id="@+id/cart"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:lines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="9sp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="4dp"
            android:id="@+id/desc_product"
            android:textColor="#7d7d7d"
            android:fontFamily="@font/productsansmedium"
            android:text="Nike Mercurial Superfly VII Elite FG CR7 Cristiano Ronaldo Shuai - Blue"
            app:layout_constraintTop_toBottomOf="@id/image_product"/>

        <TextView
            app:layout_constraintStart_toStartOf="@id/desc_product"
            app:layout_constraintTop_toBottomOf="@id/desc_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/price"
            android:fontFamily="@font/productsansmedium"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp"
            android:textColor="#000000"
            android:text="US $108"
            />
        <TextView
            android:fontFamily="@font/productsansregular"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:id="@+id/nbsold"
            android:textColor="#9b9b9b"
            android:text="636 sold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>