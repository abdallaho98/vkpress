<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/outside"
    android:background="#55000000"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:elevation="5dp"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/card_aliexpress"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="600dp">
        <ImageView
            android:id="@+id/aliexpress"
            android:src="@drawable/pngguru_com"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="84dp"
            android:layout_height="20dp">

        </ImageView>


        <ImageView
            android:id="@+id/back"
            android:src="@drawable/ic_keyboard_arrow_down"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="24dp"
            android:layout_height="24dp">

        </ImageView>


        <ImageView
            android:layout_marginHorizontal="16dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:id="@+id/separat"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/aliexpress"
            android:src="#eaeaea"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/slogan"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/separat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/productsansmedium"
            android:textColor="#000000"
            android:text="Order Confirmation"
            />

        <ImageView
            android:layout_marginStart="16dp"
            android:id="@+id/icon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/slogan"
            android:src="@drawable/ic_map"/>


        <TextView
            app:layout_constraintStart_toEndOf="@id/icon"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:elevation="0dp"
            android:lines="1"
            android:id="@+id/full_name"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.8sp"
            android:textColor="#000000"
            android:lineSpacingExtra="9.2sp"
            android:text="Ilyas Boudjeltia"
            />

        <TextView
            android:fontFamily="@font/productsansmedium"
            android:textSize="12dp"
            android:layout_marginEnd="16dp"
            android:textColor="#4fa5c7"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="CHANGE"
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/full_name"
            app:layout_constraintBottom_toBottomOf="@id/address"
            />

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/full_name"
            android:background="@android:color/white"
            android:elevation="0dp"
            android:lines="3"
            android:id="@+id/address"
            android:maxWidth="300dp"
            android:maxLines="3"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.8sp"
            android:textColor="#545454"
            android:lineSpacingExtra="9.2sp"
            android:text="Latest Coat Pant Designs Light Grey Men Suit Wedding Suits Slim Fit Skinny Jacket Custom Costume Groom Tuxedo 3 Piece Masculino"
            />

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/separator"
            app:layout_constraintTop_toBottomOf="@id/address"
            android:src="#eaeaea"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <ImageView
            android:id="@+id/cash"
            android:layout_width="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/separator"
            android:src="@drawable/ic_cash"/>

        <TextView
            android:id="@+id/discount_slogan"
            android:fontFamily="@font/productsansmedium"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/cash"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#2d2d2d"
            android:text="**** **** **** 3211"
            />


        <TextView
            android:fontFamily="@font/productsansmedium"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/separator"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#4fa5c7"
            android:gravity="end"
            android:text="CHANGE"
            />

        <ImageView
            android:id="@+id/separator2"
            app:layout_constraintTop_toBottomOf="@id/discount_slogan"
            android:src="#eaeaea"

            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="8dp"/>

        <ImageView
            android:id="@+id/market"
            android:layout_width="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/separator2"
            android:src="@drawable/ic_storefront"/>

        <TextView
            android:id="@+id/expedition_slogan"
            android:fontFamily="@font/productsansmedium"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/market"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/separator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#2d2d2d"
            android:text="Shop market 45632"
            />

        <TextView
            android:id="@+id/shipping"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:text="Shipping: US $12"
            />
        <TextView
            android:maxLines="1"
            android:lines="1"
            android:maxWidth="95dp"
            android:id="@+id/reduction_small"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#b6b6b6"
            android:text="Note to seller"
            />

        <EditText
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/reduction_small"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@id/reduction_small"
            android:hint="Opt Message Here"
            android:maxLines="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/image"
            android:id="@+id/lineair"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="Order Confirmation"
                />
            <TextView
                android:id="@+id/price"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="US $49.99"
                />
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#66000000"
                    android:gravity="center_horizontal"
                    android:text="Black, China"
                    />

                <TextView
                    android:layout_marginStart="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#66000000"
                    android:gravity="center_horizontal"
                    android:text="-"
                    />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginStart="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_horizontal"
                    android:text="1"
                    />

                <TextView
                    android:backgroundTint="#33000000"
                    android:background="@drawable/circle"
                    android:layout_marginStart="32dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:textSize="16sp"
                    android:textColor="#99000000"
                    android:gravity="center_horizontal"
                    android:text="+"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@android:color/holo_blue_bright"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/market"
            android:layout_width="84dp"
            android:layout_height="96dp"/>

        <ImageView
            app:layout_constraintBottom_toTopOf="@id/bottom"
            android:id="@+id/separator3"
            android:src="#eaeaea"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="8dp"/>

        <RelativeLayout
            android:id="@+id/bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/productsansmedium"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#2c2c2c"
                android:text="US $50.9"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#2c2c2c"
                android:text="Total"
                />
            <Button
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/buy_now"
                android:background="@drawable/card_outline"
                android:backgroundTint="#f36d61"
                android:layout_width="84dp"
                android:layout_height="36dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="BUY NOW"
                />
        </RelativeLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

