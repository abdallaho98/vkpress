<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="3dp"
    android:backgroundTint="@android:color/white"
    android:background="@drawable/card_aliexpress"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="690dp">
    <ImageView
        android:id="@+id/aliexpress"
        android:src="@drawable/pngguru_com"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="84dp"
        android:layout_height="20dp">

    </ImageView>


    <ImageView
        android:id="@+id/back"
        android:src="@drawable/ic_keyboard_arrow_down"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="24dp"
        android:layout_height="24dp">

    </ImageView>


    <ImageView
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:id="@+id/image"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/aliexpress"
        android:src="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="224dp"/>

    <TextView
        android:id="@+id/price"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/productsansmedium"
        android:textColor="#000000"
        android:text="US $61.98"
        />


    <ImageView
        android:id="@+id/favorite"
        android:src="@drawable/ic_favorite"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/price"
        app:layout_constraintTop_toTopOf="@id/price"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <TextView
        android:id="@+id/nbfav"
        app:layout_constraintEnd_toEndOf="@id/favorite"
        app:layout_constraintStart_toStartOf="@id/favorite"
        app:layout_constraintTop_toBottomOf="@id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#a8a8a8"
        android:text="0"
        />

    <TextView
        android:background="@android:color/white"
        android:elevation="0dp"
        android:lines="4"
        android:id="@+id/desc"
        android:maxLines="4"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/nbfav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14.8sp"
        android:textColor="#545454"
        android:lineSpacingExtra="9.2sp"
        android:text="Latest Coat Pant Designs Light Grey Men Suit Wedding Suits Slim Fit Skinny Jacket Custom Costume Groom Tuxedo 3 Piece Masculino"
        />

    <ImageView
        android:id="@+id/separator"
        app:layout_constraintTop_toBottomOf="@id/desc"
        android:src="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <TextView
        android:id="@+id/discount_slogan"
        android:fontFamily="@font/productsansmedium"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#2d2d2d"
        android:text="Discounts &amp; Coupons"
        />

    <ImageView
        android:layout_marginTop="4dp"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/reduction"
        app:layout_constraintTop_toBottomOf="@id/discount_slogan"
        android:src="@drawable/reduction"
        android:layout_width="160dp"
        android:layout_height="30dp"/>
    <TextView
        android:fontFamily="@font/productsansmedium"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#4fa5c7"
        android:gravity="end"
        android:text="Get Now"
        />

    <ImageView
        android:id="@+id/separator2"
        app:layout_constraintTop_toBottomOf="@id/reduction"
        android:src="#eaeaea"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/expedition_slogan"
        android:fontFamily="@font/productsansmedium"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#2d2d2d"
        android:text="Shipping : US $20.79"
        />

    <TextView
        android:id="@+id/reduction_small"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/expedition_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.2sp"
        android:textColor="#b6b6b6"
        android:text="To Finland via AliExpress Standard Shipping"
        />

    <ImageView
        android:id="@+id/separator3"
        app:layout_constraintTop_toBottomOf="@id/reduction_small"
        android:src="#eaeaea"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1dp"/>

    <ImageView
        android:layout_marginTop="4dp"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/protection"
        app:layout_constraintTop_toBottomOf="@id/separator3"
        android:src="@drawable/buyer_protection"
        android:layout_width="160dp"
        android:layout_height="30dp"/>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="2dp"
            android:padding="6dp"
            android:layout_gravity="center"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/store"/>
        <Button
            android:background="#fce3e0"
            android:textSize="12sp"
            android:textColor="#ea6850"
            android:text="ADD TO CART"
            android:layout_width="153dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/buy_now"
            android:background="#f36d61"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="BUY NOW"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>