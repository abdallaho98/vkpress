<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="518dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profile_image"
        android:layout_margin="12dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@color/colorPrimary"
        app:layout_constraintCircleRadius="90dp"/>
    <LinearLayout
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fullname"
            android:fontFamily="@font/productsansmedium"
            android:textSize="13.5sp"
            android:textColor="#768dac"
            android:text="Marques Brownlee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            ></TextView>

        <TextView
            android:id="@+id/time"
            android:fontFamily="@font/productsansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.5sp"
            android:textColor="#929697"
            android:letterSpacing="-0.01"
            android:text="9 minutes ago"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dots"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_more_vert"
        android:tint="#d1d2d7"
        />

    <ImageView
        android:id="@+id/image"
        android:scaleType="centerCrop"
        android:src="@drawable/adidas"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        />


    <ImageView
        android:id="@+id/accountlogo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_account"
        android:tint="#99b5db"
        />

    <TextView
        android:fontFamily="@font/productsansmedium"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@id/accountlogo"
        app:layout_constraintTop_toTopOf="@id/accountlogo"
        app:layout_constraintStart_toEndOf="@id/accountlogo"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#7186a2"
        android:letterSpacing="-0.01"
        android:text="Isaac Garrett"
        />

    <ImageView
        android:id="@+id/separator"
        android:src="#dfe2df"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/accountlogo"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

    <LinearLayout
        android:weightSum="45"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintWidth_percent=".45"
        android:layout_height="24dp"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="15"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:tint="#b2b6be"
                android:src="@drawable/ic_heart_outline"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/nblikes"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/productsansmedium"
                android:textSize="14sp"
                android:textColor="#a0a6b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="15"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:tint="#b2b6be"
                android:src="@drawable/ic_comment_outline"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/nbcomment"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/productsansmedium"
                android:textSize="14sp"
                android:textColor="#a0a6b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="15"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:tint="#b2b6be"
                android:src="@drawable/ic_share_outline"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:tint="#b2b6be"
            android:src="@drawable/ic_eye"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:id="@+id/nbseen"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/productsansmedium"
            android:textSize="14sp"
            android:textColor="#a0a6b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>